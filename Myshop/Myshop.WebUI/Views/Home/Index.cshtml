@model IEnumerable<Myshop.core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}
<h1>Products</h1>

@foreach (var item in Model)
{
<div class="col-md-2" style="height:400px;padding:10px;margin:10px;border:solid thin ">
    <div class="col-md-12" >
        <img class="img-responsive" style="height:200px" src="~/Content/ProductImages/@item.Image" />
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(item.Name,"Details",new { id=item.Id})</strong>
    </div>
    <div class="col-lg-12">
        <p>@item.Description</p>
    </div>
    <div class="col-md-12">
        <h4>@item.Price</h4>
    </div>
    <div class="col-md-12">
        <a href="#" class="btn btn-default">Add To Cart</a>
    </div>
</div>
}
<div class="col-md-12 clearfix"/>
